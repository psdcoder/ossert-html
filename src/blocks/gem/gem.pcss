.gem {
  &__description {
    margin: calc($layoutFactor * 2px) 0 0;
    font-family: $fontFamily;
    font-size: 16px;
    line-height: 24px;
    font-weight: 600;
    color: $textColorPrimary;
  }

  &__links {
    margin: calc($layoutFactor * 2px) 0 0;
  }

  &__link {
    font-size: 16px;
    line-height: 1.4;
    font-weight: 600;
    text-decoration: none;
    margin-right: calc($layoutFactor * 2px);

    &:last-child {
      margin-right: 0;
    }
  }
}
