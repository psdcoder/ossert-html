.header {
  background-color: $themePrimary;
  padding: calc($layoutCommonPadding / 2) 0;

  &__content {
    display: flex;
    justify-content: space-between;
    align-items: center;

    @media (--tablet) {
      flex-direction: column;
    }
  }

  &__logo {
    line-height: calc($layoutCommonPadding * 2);
  }

  &__search {
    flex-grow: 1;
    max-width: 60%;
    margin-left: calc($layoutCommonPadding * 2);

    @media (--tablet) {
      max-width: none;
      width: 100%;
      margin: calc($layoutCommonPadding / 2) 0 0;
    }
  }
}
